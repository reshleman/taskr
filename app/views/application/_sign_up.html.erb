<div class="form">
  <h1>Sign Up</h1>
  <%= form_for user do |form| %>

    <%= render "errors", object: user %>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign up" %>
    </div>
  <% end %>
</div>
